{
  "name": "app",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.0-beta.2",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.5",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3",
    "esbuild": "^0.19.11",
    "nodemon": "^3.0.3",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-router-dom": "^6.21.2",
    "sass": "^1.69.7",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^4.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{app,lib,spec,test}/**/*.rb": [
      "./node_modules/.bin/prettier --plugin=@prettier/plugin-ruby --write",
      "./bin/bundle exec rubocop --require rubocop-rspec -a"
    ],
    "spec/**/*_spec.rb": "rspec",
    "spec/**/**/*_spec.rb": "rspec",
    "app/**/*.{json,js,jsx,ts,tsx,css,scss}": "./node_modules/.bin/prettier --write --ignore-unknown"
  },
  "browserslist": [
    "defaults"
  ],
  "packageManager": "yarn@4.0.2"
}
